@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram.com</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./css/style.css">
</head>
<body>
<div class="container">
    <div class="row row-cols-1 mt-5">
        <div class="col col-8 mx-auto">
            <div class="row row-cols-2">
                <div class="col col-6">
                    <img alt="" class="w-100" src="../images/Снимок экрана 2024-05-06 в 17.08.50.png"/>
                </div>
                <div class="col col-6 text-center">
                    <div class="row">
                        <div class="col col-12 border border-1 py-4 px-5">
                            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                                <img alt="" class="w-75 mt-2" src="../images/logo2.png"/>
                                <div class="input-group mt-5">
                                    <label for="email"><span class="text-danger" asp-validation-for="Email"></span></label>
                                    <input asp-for="Email" type="text" class="form-control" placeholder="Email" id="email">
                                </div>
                                <div class="input-group mt-2">
                                    <label for="phone"><span class="text-danger" asp-validation-for="PhoneNumber"></span></label>
                                    <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone number" id="phone">
                                </div>
                                <div class="input-group mt-2">
                                    <label for="userName"><span class="text-danger" asp-validation-for="UserName"></span></label>
                                    <input asp-for="UserName" type="text" class="form-control" placeholder="Username" id="userName">
                                </div>
                                <div class="input-group mt-2">
                                    <label for="login"><span class="text-danger" asp-validation-for="Login"></span></label>
                                    <input asp-for="Login" type="text" class="form-control" placeholder="Login name" id="login">
                                </div>
                                <div class="input-group mt-2">
                                    <label for="gen"><span class="text-danger" asp-validation-for="Gender"></span></label>
                                    <select asp-for="Gender" class="form-select mt-3" id="gen">
                                        <option disabled="disabled" selected="selected">Choose your gender</option>
                                        @foreach (var gender in ViewBag.Genders)
                                        {
                                            <option value="@gender">@gender</option>
                                        }
                                    </select>
                                </div>
                                <div class="input-group mt-2">
                                    <label for="pass"><span class="text-danger" asp-validation-for="Password"></span></label>
                                    <input asp-for="Password" type="text" class="form-control" placeholder="Password" id="pass">
                                </div>
                                <div class="input-group mt-2">
                                    <label for="conPass"><span class="text-danger" asp-validation-for="ConfirmPassword"></span></label>
                                    <input asp-for="ConfirmPassword" type="text" class="form-control" placeholder="Confirm Password" id="conPass">
                                </div>
                                <button type="submit" class="btn btn-primary rounded-2 w-100 mt-3">Sign up</button>
                            </form>
                        </div>
                        <div class="col col-12 text-center border border-1 mt-4 py-4">
                            Have an account? &nbsp;<a class="link link-info link-underline link-underline-opacity-0" asp-action="Login" >Log in</a>
                        </div>
                        <div class="col-12 text-center pt-3">
                            Get the app.
                            <img alt="" class="w-75 mt-3" src="../images/Снимок экрана 2024-05-06 в 17.57.13.png"/>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>