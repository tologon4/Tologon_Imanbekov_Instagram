@model RegisterViewModel
@{
    ViewBag.Title = "Instagram";
    Layout = "_Layout2";
}
<div class="container">
    <div class="row row-cols-1 mt-5">
        <div class="col col-8 mx-auto">
            <div class="row row-cols-2">
                <div class="col col-6">
                    <img alt="" class="w-100" src="../images/Снимок экрана 2024-05-06 в 17.08.50.png"/>
                </div>
                <div class="col col-6 text-center">
                    <div class="row">
                        <div class="col col-12 border border-1 py-4 px-5">
                            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" enctype="multipart/form-data">
                                <img alt="" class="w-75 mt-2" src="../images/logo2.png"/>
                                <div class="input-group mt-5">
                                    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
                                    <label for="email"><span class="text-danger" asp-validation-for="Email"></span></label>
                                    <div class="input-group">
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Email" id="email">
                                    </div>
                                </div>
                                <div class="input-group mt-2">
                                    <label for="phone"><span class="text-danger" asp-validation-for="PhoneNumber"></span></label>
                                    <div class="input-group">
                                        <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone number" id="phone">
                                    </div>
                                </div>
                                <div class="input-group mt-2">
                                    <label for="userName"><span class="text-danger" asp-validation-for="UserName"></span></label>
                                    <div class="input-group">
                                        <input asp-for="UserName" type="text" class="form-control" placeholder="Username" id="userName">
                                    </div>
                                </div>
                                <div class="input-group mt-2">
                                    <label for="login"><span class="text-danger" asp-validation-for="FullName"></span></label>
                                    <div class="input-group">
                                        <input asp-for="FullName" type="text" class="form-control" placeholder="Full name" id="login">
                                    </div>
                                </div>
                                <div class="input-group mt-2">
                                    <label for="gen"><span class="text-danger" asp-validation-for="Gender"></span></label>
                                    <div class="input-group">
                                        <select asp-for="Gender" class="form-select" id="gen">
                                            <option disabled="disabled" selected="selected">Choose your gender</option>
                                            @foreach (var gender in ViewBag.Genders)
                                            {
                                                <option value="@gender">@gender</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="input-group mt-2">
                                    <label for="login"><span class="text-danger" asp-validation-for="UserInfo"></span></label>
                                    <div class="input-group">
                                        <textarea class="form-control h-100" asp-for="UserInfo" placeholder="Info" type="text" rows="4"></textarea>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <label for="file">Choose your profile photo</label>
                                    <input id="file" type="file" name="uploadedFile" class="form-control" required="required">
                                </div>
                                <div class="input-group mt-2">
                                    <label for="pass"><span class="text-danger" asp-validation-for="Password"></span></label>
                                    <div class="input-group">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" id="pass">
                                    </div>
                                </div>
                                <div class="input-group mt-2">
                                    <label for="conPass"><span class="text-danger" asp-validation-for="ConfirmPassword"></span></label>
                                    <div class="input-group">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" id="conPass">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary rounded-2 w-100 mt-3">Sign up</button>
                            </form>
                        </div>
                        <div class="col col-12 text-center border border-1 mt-4 py-4">
                            Have an account? &nbsp;<a class="link link-info link-underline link-underline-opacity-0" asp-action="Login" >Log in</a>
                        </div>
                        <div class="col-12 text-center pt-3">
                            Get the app.
                            <a href="https://play.google.com/store/apps/details?id=com.instagram.android&pli=1">
                                <img alt="" class="w-75 mt-3" src="~/images/Снимок экрана 2024-05-06 в 17.57.13.png"/>
                            </a>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}