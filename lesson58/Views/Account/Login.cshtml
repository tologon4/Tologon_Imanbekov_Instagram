@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram.com</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./css/style.css">
</head>
<body>
<div class="container">
    <div class="row row-cols-1 mt-5">
        <div class="col col-8 mx-auto">
            <div class="row row-cols-2">
                <div class="col col-6">
                    <img class="w-100" src="../images/Снимок экрана 2024-05-06 в 17.08.50.png"/>
                </div>
                <div class="col col-6 text-center">
                    <div class="row">
                        <div class="col col-12 border border-1 py-4 px-5">
                            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                                <img class="w-75 mt-2" src="../images/logo2.png"/>
                                <div class="input-group mt-5">
                                    <label for="email"><span class="text-danger" asp-validation-for="Email"></span></label>
                                    <input asp-for="Email" type="text" class="form-control" placeholder="Phone number, username, or email" id="email">
                                </div>
                                <div class="input-group mt-2">
                                    <label for="pass"><span class="text-danger" asp-validation-for="Password"></span></label>
                                    <input asp-for="Password" type="text" class="form-control" placeholder="Password" id="pass">
                                </div>
                                <button type="submit" class="btn btn-primary rounded-2 w-100 mt-3">Log in</button>
                            </form>
                        </div>
                        <div class="col col-12 text-center border border-1 mt-4 py-4">
                            <a class="link link-info link-underline link-underline-opacity-0" asp-action="Register" >Create new account</a>
                        </div>
                        <div class="col-12 text-center pt-3">
                            Get the app.
                            <img class="w-75 mt-3" src="../images/Снимок экрана 2024-05-06 в 17.57.13.png"/>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>